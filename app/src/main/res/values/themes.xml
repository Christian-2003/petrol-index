<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!-- Default theme for the app -->
    <style name="Theme.PetrolIndex" parent="android:Theme.Material.Light.NoActionBar"/>

    <!-- Theme for the app splash screen -->
    <style name="Theme.PetrolIndex.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/md_theme_surface</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>
        <item name="windowSplashScreenAnimationDuration">@integer/splash_duration</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/ic_splash_branding</item>
        <item name="postSplashScreenTheme">@style/Theme.PetrolIndex</item>
    </style>

</resources>
